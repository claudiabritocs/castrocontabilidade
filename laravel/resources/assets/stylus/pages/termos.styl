.center
  background-color #f0f0f0
  .flex
    display flex
    justify-content space-evenly
    padding 30px 0
    +below($tablet)
      flex-wrap wrap
    h2
      muli 55
      color #3b3950
      padding-top 80px
      max-width 380px
      +below($tablet)
        lato 47
        max-width 340px
      +below($mobile)
        lato 30
        text-align center
        max-width 400px
    img 
      padding 20px
      +below($tablet)
        width 350px
      +below($mobile)
        width 250px
  .text
    muli 18
    color #212529
    width 70%
    margin-right auto
    margin-left auto
    text-align justify
    padding-bottom 60px
    +below($tablet)
      muli 16
      width 80%
    +below($mobile) 
      muli 14
      width 90%
    
  .termos
    padding 40px 0 80px
    background-color #754e0d
    h1
      lato 49
      color #fff
      padding 40px 0
      text-align center
      +below($mobile)
        lato 30
        text-align center
    p, li
      muli 18
      color #fff
      width 70%
      margin-right auto
      margin-left auto
      text-align justify
      +below($tablet)
        muli 16
        width 80%
      +below($mobile) 
        muli 14
        width 90%
    h2, h3
      muli 20
      color #fff
      width 70%
      margin-right auto
      margin-left auto
      text-align justify
      +below($tablet)
